<!-- Loop over each object in the messages array -->
{{#each messages as |message|}}
  <div class='row mb-4 message'>
    <div class='col-md-5'>
      <h2>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->
        {{{get_emoji}}}
        <a href='/message/{{message.id}}'>{{message.name}}</a>
      </h2>
      <p>
        <span for='img' aria-label='money'>ğŸ’²</span>
        <!-- Pass needed_funding value to the helper function -->
        <span class='dollar-amount'>{{format_amount message.needed_funding}}</span>
        needed!
      </p>
      <p>Created by {{message.user.name}} on {{format_date message.date_created}}</p>
    </div>
    <div class='col-md-7'>
      <p>
        {{message.description}}
      </p>
    </div>
    {{#each message.comments as |comment|}}
      <div>{{comment.title}}</div>
    {{/each}}
  </div>
{{/each}}